{
  "name": "ironuki-gui",
  "version": "1.0.0",
  "description": "A GUI tool to capture color under the mouse cursor",
  "main": "main.mjs",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "fix": "prettier --write . && eslint --fix .",
    "lint": "prettier --check . && eslint ."
  },
  "author": {
    "name": "Kazuma Naka",
    "email": "kazuma.naka.01@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "pngjs": "^7.0.0",
    "robotjs": "^0.6.0",
    "screenshot-desktop": "^1.15.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "electron": "^30.5.1",
    "electron-builder": "^25.0.5",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "prettier": "^3.3.3"
  },
  "build": {
    "appId": "com.kazumaproject.tempshelf",
    "productName": "temp-shelf",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "preload.js",
      "main.mjs",
      "renderer.mjs",
      "index.html",
      "ColorCapture.mjs",
      "ColorProcessor.mjs",
      "Screen.mjs",
      "Screenshot.mjs",
      "style.css",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "kazuma-naka",
      "repo": "ironuki-gui",
      "releaseType": "release"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "icon": "img/logo.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "img/logo.ico"
    },
    "linux": {
      "target": "deb",
      "icon": "img/icon.png"
    }
  }
}